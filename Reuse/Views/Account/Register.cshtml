            @Html.ValidationMessageFor(m => m.endereco, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.cep, htmlAttributes: new { @class = "control-label col-md-2" })
