@model Reuse.Models.Anuncio

@{
    ViewBag.Title = "Detalhes";
    string img;
}

<h2>Detalhes</h2>

<div>
    <h4>Anuncio</h4>
    <hr />
    <div style="width:85%; float:right">
            @if (Model.img == null)
            {
                img = "https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/300px-No_image_available.svg.png";
            }
            else
            {
                img = Model.img;
            }

            <div style="width:15%; float:left">
                <img src="@img" width="100" height="100" />
            </div>
            <div style="width:85%; float:right">
                <p>@Model.titulo</p>
                <p>Condição: @Model.condicao</p>
                <p>Anuciado por: @Model.pessoa.nome</p>
                <p>Categoria: @Model.categoria.titulo - @Model.subCategoria</p>
                <p>Descrição: @Model.descricao</p>
                @Html.ActionLink("Eu Preciso!", "PegarItem", new { anuncioID = Model.anuncioID, titulo = Model.titulo,
               tipoAnuncio = "Ofertas", remetente = User.Identity.Name.ToString(), destinatario = Model.pessoa.email }, htmlAttributes: new { @class = "btn btn-default" })
                <a class="btn btn-default" target="popup"
                   onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=https://localhost:44300/Ofertas/Details/@Model.anuncioID', 'name', 'width=600,height=400')">
                    <img src="http://wap.timotta.com/assets/logo-facebook-pequeno-075bec2439cc1f5d31f6e50b2592926a.gif" /> Compartilhar
                </a>
                <a class="btn btn-default" target="popup"
                   onclick="window.open('https://twitter.com/intent/tweet?text=Olhem só: @Model.titulo para doação. Acesse https://localhost:44300/Ofertas/Details/@Model.anuncioID para ver mais.', 'name', 'width=600,height=400')">
                    <img src="https://g.twimg.com/twitter-bird-16x16.png" /> Tweet
                </a>
            </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
