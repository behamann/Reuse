<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Projeto Reuse</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--[if lte IE 8]><script src="~/assets/js/ie/html5shiv.js"></script><![endif]-->
    <link href="~/assets/css/main.css" rel="stylesheet" />
    <!--[if lte IE 8]><link rel="stylesheet" href="~/assets/css/ie8.css" /><![endif]-->

</head>
<body class="homepage">
    <script src="~/Scripts/facebookShare.js"></script>


    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper">
            <header id="header" class="container">

                <!-- Logo -->
                <div id="logo">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <h1>@Html.ActionLink("Reuse", "", "Home")</h1>
                </div>

                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li>@Html.ActionLink("Ofertas", "Index", "Ofertas")</li>
                        <li>@Html.ActionLink("Pedidos", "Index", "Pedidos")</li>
                        <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </nav>

            </header>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />


            <!-- Footer -->
            <div id="footer-wrapper">
                <footer id="footer" class="container">                    
                    <div class="row">
                        <div class="12u">
                            <div id="copyright">
                                <ul class="menu">
                                    <li>&copy; @DateTime.Now.Year - Projeto Reuse, Todos os diretos reservados</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        <!-- Scripts -->

        <script src="~/assets/js/jquery.min.js"></script>
        <script src="~/assets/js/jquery.dropotron.min.js"></script>
        <script src="~/assets/js/skel.min.js"></script>
        <script src="~/assets/js/util.js"></script>
        <!--[if lte IE 8]><script src="~/assets/js/ie/respond.min.js"></script><![endif]-->
        <script src="~/assets/js/main.js"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
